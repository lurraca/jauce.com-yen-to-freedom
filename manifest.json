{
  "manifest_version": 3,
  "name": "Yen to Freedom",
  "version": "1.0.0",
  "description": "Converts Japanese Yen to USD and EUR on jauce.com auctions",
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.svg",
      "48": "icons/icon48.svg"
    },
    "default_popup": "popup.html",
    "default_title": "Yen to Freedom"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "*://*.jauce.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.jauce.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
